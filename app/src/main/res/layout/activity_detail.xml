<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/detailCv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/detailIvCover"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/no_image"
                    android:scaleType="centerInside"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/detailTvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="Anime Title"
                        android:textColor="@color/textColor"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/detailTvStudio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif"
                        android:text="Studio: Studio Name"
                        android:textColor="@color/textColorBlack"/>

                    <TextView
                        android:id="@+id/detailTvRelease"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif"
                        android:text="Release: Fall 2024"
                        android:textColor="@color/textColorBlack"/>
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/detailTvSynopsis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:fontFamily="sans-serif"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis in maximus lacus, vel ornare nunc. Aenean pharetra nunc ac semper interdum. Donec ac consequat metus. Praesent posuere vehicula pharetra. Nullam vel sapien nec augue bibendum tempus ut sit amet quam. Aenean finibus viverra augue ac fringilla."
            android:textColor="@color/textColor"/>
    </LinearLayout>


</ScrollView>